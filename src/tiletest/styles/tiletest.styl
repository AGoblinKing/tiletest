html, body
  height 100%
  overflow hidden
  margin 0px
  padding 0px

.tilemap
  -webkit-transition 2s linear
  position absolute
  display -webkit-flex
  -webkit-flex-direction column
  .row 
    display -webkit-flex
    -webkit-flex auto
    .cell 
      -webkit-flex auto
      image-rendering -webkit-optimize-contrast
      background-image url(../images/tiles.png)
      background-size 1600% 1600%

.tilemap.bordered
  .cell
    box-shadow inset 0 0 1px rgba(0, 0, 0, 1)
  
  .cell:hover
    box-shadow inset 0 0 10px rgba(100, 0, 0, 1)